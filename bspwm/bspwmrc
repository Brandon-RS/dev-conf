#! /bin/sh

sxhkd &

$HOME/.config/polybar/launch.sh 

xsetroot -cursor_name arrow& 

nitrogen --restore & 

wmname LG3D &

xinput --set-prop 8 'libinput Accel Speed' -0.9 &
xinput --list-props 8 &

picom --experimental-backends -b -f & 

# Bar

